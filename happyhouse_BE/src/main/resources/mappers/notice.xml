<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.mapper.NoticeMapper">

	<!-- 게시글 전체 조회 -->
	<select id="selectNotice" resultType="noticeDto">
		select *
		from notice
		order by noticeNo desc
	</select>
	
	<!-- 게시글 상세 조회 -->
	<select id="selectNoticeByNo" resultType="noticeDto">
		select *
		from notice
		where noticeNo = #{noticeNo}
	</select>
	
	<!-- 게시글 등록 -->
	<insert id="insertNotice" parameterType="noticeDto">
		insert into notice(
			memberId, subject, content
		) values (
			#{memberId}, #{subject}, #{content}
		)
	</insert>
	
	<!-- 게시글 수정 -->
	<update id="updateNotice" parameterType="noticeDto">
		update notice 
		   set subject = #{subject},
		   	   content = #{content}
		 where noticeNo = #{noticeNo}
	</update>

	<!-- 게시글 삭제 -->
	<delete id="deleteNotice" parameterType="int">
		delete 
		from notice 
		where noticeNo = #{noticeNo}
	</delete>
	
	<sql id="search">
		<if test="word != null and word != ''">
			<choose>
				<when test="key.equals('all')">
					subject like concat('%', #{word}, '%') or content like concat('%', #{word}, '%')
				</when>
				<when test="key.equals('subject')">
					subject like concat('%', #{word}, '%')
				</when>
				<when test="key.equals('content')">
					content like concat('%', #{word}, '%')
				</when>
			</choose>
		</if>
	</sql>
	
	<!-- 게시글 검색 -->
	<select id="searchNotice" parameterType="map" resultType="noticeDto">
		select *
		from notice
		<where>
			<include refid="search"></include>
		</where>
		order by noticeNo desc
	</select>

</mapper>